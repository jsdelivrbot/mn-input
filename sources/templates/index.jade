html
  meta(name='viewport' content='width=device-width, user-scalable=no')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans')
  link(rel='stylesheet' href='mn-input.css')
  style.
    body {
      font-family: 'Open Sans', sans-serif;
      -webkit-font-smoothing: antialiased;
    }
body
  h1(title='lero') Minimalist inputs

  form(novalidate)
    h2 mn-input
    mn-input#username(placeholder='Username', required, autocapitalize='off')
    mn-input(placeholder='Password', type='password')
    mn-input(placeholder='Input Password', type='password', disabled)
    mn-input(placeholder='Email', type='email')

  div
    h2 mn-input[disabled]
    mn-input(placeholder='Input', disabled)

  div
    h2 mn-input[type='text']
    mn-input(placeholder='Username')

  div
    h2 mn-input[type='password']
    mn-input(placeholder='Password', type='password')

  div
    h2 mn-input[type='email']
    mn-input(placeholder='Email', type='email')
  
  script(src='vendor.js')
  script(src='mn-input.js')
  script.
    'use strict';

    let form = document.querySelector('form');
    form.addEventListener('submit', validate);

    function validate(event) {
      event.preventDefault();
    }

